{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6", "esnext", "es2015"],
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["./modules/*"]
    }
  },
  "skipLibCheck": true,
  "include": ["./**/*.ts"],
  "files": ["src/server.ts"],
  "exclude": ["node_modules", "build"]
}